  <!-- Auto Dark Mode Detection -->
  <script>
    const passwordInput = document.getElementById('password');
    const togglePassword = document.getElementById('togglePassword');
    const eye = document.getElementById('eye');
    const eyeOff = document.getElementById('eye-off');

    // Function to set theme
    function setTheme(isDark) {
      if (isDark) {
        document.documentElement.classList.add("dark");
        localStorage.theme = "dark";
      } else {
        document.documentElement.classList.remove("dark");
        localStorage.theme = "light";
      }
    }

    // Function to sync toggle states
    function syncToggles(isDark) {
      const desktopToggle = document.getElementById("toggle-theme");
      const mobileToggle = document.getElementById("toggle-theme-mobile");

      if (desktopToggle) desktopToggle.checked = isDark;
      if (mobileToggle) mobileToggle.checked = isDark;
    }

    // Check for saved theme preference, otherwise use system preference
    const prefersDark = localStorage.theme === "dark" ||
      (!("theme" in localStorage) && window.matchMedia("(prefers-color-scheme: dark)").matches);

    setTheme(prefersDark);
    syncToggles(prefersDark);

    // Theme toggle functionality for desktop
    const desktopToggle = document.getElementById("toggle-theme");
    if (desktopToggle) {
      desktopToggle.addEventListener("click", () => {
        const isDark = desktopToggle.checked;
        setTheme(isDark);
        syncToggles(isDark);
      });
    }

    // Theme toggle functionality for mobile
    const mobileToggle = document.getElementById("toggle-theme-mobile");
    if (mobileToggle) {
      mobileToggle.addEventListener("click", () => {
        const isDark = mobileToggle.checked;
        setTheme(isDark);
        syncToggles(isDark);
      });
    }
    togglePassword.addEventListener('click', () => {
      const isPassword = passwordInput.type === 'password';
      passwordInput.type = isPassword ? 'text' : 'password';
      eye.classList.toggle('hidden', isPassword);
      eyeOff.classList.toggle('hidden', !isPassword);
    });
  </script>
