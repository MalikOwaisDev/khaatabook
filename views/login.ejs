          <% if (error) { %>
          <div class="px-4 py-3 mb-6 w-full bg-red-600 rounded-md">
            <p class="text-sm text-white"><%= error %></p>
          </div>
          <% } %>

          <form class="flex flex-col gap-4 sm:gap-5" action="/login" method="POST">
            <!-- Email -->
            <div>
              <input type="email" name="email" placeholder="Enter your Email" class="px-3 py-3 w-full text-black bg-white rounded-md border transition-all duration-200 outline-none sm:py-2 border-zinc-300 dark:border-zinc-500 dark:bg-zinc-700 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent" required />
            </div>

            <!-- Password -->
            <div class="relative w-full">
              <input type="password" id="password" name="password" placeholder="Enter your Password" class="px-3 py-3 w-full text-black bg-white rounded-md border transition-all duration-200 outline-none sm:py-2 border-zinc-300 dark:border-zinc-500 dark:bg-zinc-700 dark:text-white focus:ring-2 focus:ring-blue-500 focus:border-transparent" required />
              <div class="absolute right-3 top-1/2 transform -translate-y-1/2 cursor-pointer" id="togglePassword">
                <i id="eye" class="text-lg text-black transition-opacity ri-eye-line dark:text-white hover:opacity-75"></i>
                <i id="eye-off" class="hidden text-lg text-black transition-opacity ri-eye-off-line dark:text-white hover:opacity-75"></i>
              </div>
            </div>

            <!-- Submit Button -->
            <div class="mt-2">
              <input type="submit" value="Login" class="px-4 py-3 w-full font-medium text-white bg-blue-600 rounded-md transition-colors duration-200 cursor-pointer hover:bg-blue-700 active:bg-blue-800 sm:py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 dark:focus:ring-offset-zinc-800" />
            </div>
          </form>

