      </div>
    </nav>

    <!-- Mobile Menu Overlay -->
    <div id="mobile-menu" class="lg:hidden fixed inset-0 bg-black bg-opacity-50 z-50 hidden">
      <div class="fixed top-0 right-0 h-full w-64 bg-zinc-300 dark:bg-zinc-800 transform translate-x-full transition-transform duration-300" id="mobile-menu-panel">
        <div class="p-4">
          <button id="close-menu" class="float-right p-2 rounded hover:bg-zinc-400 dark:hover:bg-zinc-700">
            <i class="ri-close-line text-xl"></i>
          </button>
          <div class="clear-both mt-8">
            <ul class="flex flex-col gap-4">
              <li><a class="block py-2 underline underline-offset-4 text-black dark:text-white hover:opacity-70 transition-opacity" href="/">Home</a></li>
              <li><a class="block py-2 underline underline-offset-4 text-black dark:text-white hover:opacity-70 transition-opacity" href="/create">Create Hisaab</a></li>
              <li><a class="block py-2 underline underline-offset-4 text-black dark:text-white hover:opacity-70 transition-opacity" href="/logout">Logout</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <!-- Content Section -->
    <div class="p-4 sm:p-6 lg:p-10">
      <h1 class="text-xl sm:text-2xl font-semibold mb-6 sm:mb-8">View Your Hisaab: <%= filename.split(".")[0] %></h1>

      <!-- Action Buttons and Status -->
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between mb-6 gap-4">
        <!-- Status and Action Buttons -->
        <div class="flex flex-col sm:flex-row sm:items-center gap-3 sm:gap-4">
          <!-- Status Badges -->
          <div class="flex items-center gap-2 sm:gap-3">
            <p class="px-3 py-2 text-sm text-white rounded-md flex items-center gap-1
                    <% if (isEncrypted) { %>
                      bg-red-600
                    <% } else { %>
                      bg-green-600
                    <% } %>">
              <% if (isEncrypted) { %>
              <i class="ri-lock-2-line"></i>
              <span class="hidden sm:inline">Encrypted</span>
              <span class="sm:hidden">Locked</span>
              <% } else { %>
              <i class="ri-check-line"></i>
              <span class="hidden sm:inline">Available</span>
              <span class="sm:hidden">Open</span>
              <% } %>
            </p>

            <p class="px-3 py-2 text-sm text-white rounded-md flex items-center gap-1
                    <% if (isShareable) { %>
                      bg-green-600
                    <% } else { %>
                      bg-red-600
                    <% } %>">
              <% if (isShareable) { %>
              <i class="ri-eye-line"></i>
              <span class="hidden sm:inline">Shareable</span>
              <% } else { %>
              <i class="ri-eye-off-line"></i>
              <span class="hidden sm:inline">Private</span>
              <% } %>
            </p>
          </div>

          <!-- Action Buttons -->
          <div class="flex items-center gap-2 sm:gap-3">
            <a href="/edit/<%= filename %>" class="px-3 py-2 text-sm bg-teal-600 hover:bg-teal-700 text-white rounded-md transition-all duration-150 hover:scale-95 flex items-center gap-1">
              <i class="ri-edit-line"></i>
              <span class="hidden sm:inline">Edit</span>
            </a>
            <a href="/delete/<%= filename %>" class="px-3 py-2 text-sm bg-red-600 hover:bg-red-700 text-white rounded-md transition-all duration-150 hover:scale-95 flex items-center gap-1">
              <i class="ri-delete-bin-line"></i>
              <span class="hidden sm:inline">Delete</span>
            </a>
          </div>
        </div>

        <!-- Created Date -->
        <p class="text-xs sm:text-sm text-zinc-600 dark:text-zinc-400">
          <span class="font-medium">Created:</span> <%= createdAt %>
        </p>
      </div>

      <!-- Content Display -->
      <div class="max-w-4xl">
        <div class="flex flex-col gap-4 sm:gap-5">
          <!-- Title -->
          <div class="bg-white dark:bg-zinc-800 rounded-lg shadow-sm border border-zinc-200 dark:border-zinc-600">
            <div class="px-4 py-3 border-b border-zinc-200 dark:border-zinc-600">
              <h3 class="text-sm font-medium text-zinc-600 dark:text-zinc-400">Title</h3>
            </div>
            <div class="p-4">
              <p class="text-black dark:text-white break-words">
                <%= title %>
              </p>
            </div>
          </div>

          <!-- Content -->
          <div class="bg-white dark:bg-zinc-800 rounded-lg shadow-sm border border-zinc-200 dark:border-zinc-600">
            <div class="px-4 py-3 border-b border-zinc-200 dark:border-zinc-600">
              <h3 class="text-sm font-medium text-zinc-600 dark:text-zinc-400">Content</h3>
            </div>
            <div class="p-4">
              <div class="min-h-[200px] sm:min-h-[300px] max-h-[500px] overflow-y-auto">
                <pre class="text-black dark:text-white whitespace-pre-wrap break-words font-['Roboto_Condensed']"><%= data %></pre>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script>
    // Mobile Menu Toggle
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileMenuPanel = document.getElementById('mobile-menu-panel');
    const closeMenuBtn = document.getElementById('close-menu');
    const menuIcon = document.getElementById('menu-icon');

    function openMobileMenu() {
      mobileMenu.classList.remove('hidden');
      setTimeout(() => {
        mobileMenuPanel.classList.remove('translate-x-full');
      }, 10);
      menuIcon.className = 'ri-close-line text-xl';
    }

    function closeMobileMenu() {
      mobileMenuPanel.classList.add('translate-x-full');
      setTimeout(() => {
        mobileMenu.classList.add('hidden');
      }, 300);
      menuIcon.className = 'ri-menu-line text-xl';
    }

    mobileMenuBtn.addEventListener('click', () => {
      if (mobileMenu.classList.contains('hidden')) {
        openMobileMenu();
      } else {
        closeMobileMenu();
      }
    });

    closeMenuBtn.addEventListener('click', closeMobileMenu);
    mobileMenu.addEventListener('click', (e) => {
      if (e.target === mobileMenu) {
        closeMobileMenu();
      }
    });

    // Theme Management
    function setTheme(isDark) {
      if (isDark) {
        document.documentElement.classList.add("dark");
        localStorage.theme = "dark";
      } else {
        document.documentElement.classList.remove("dark");
        localStorage.theme = "light";
      }
    }

    function syncToggles(isDark) {
      const desktopToggle = document.getElementById("toggle-theme");
      const mobileToggle = document.getElementById("toggle-theme-mobile");

      if (desktopToggle) desktopToggle.checked = isDark;
      if (mobileToggle) mobileToggle.checked = isDark;
    }

    // Initialize theme
    const prefersDark = localStorage.theme === "dark" ||
      (!("theme" in localStorage) && window.matchMedia("(prefers-color-scheme: dark)").matches);

    setTheme(prefersDark);
    syncToggles(prefersDark);

    // Desktop theme toggle
    const desktopToggle = document.getElementById("toggle-theme");
    if (desktopToggle) {
      desktopToggle.addEventListener("click", () => {
        const isDark = desktopToggle.checked;
        setTheme(isDark);
        syncToggles(isDark);
      });
    }

    // Mobile theme toggle
    const mobileToggle = document.getElementById("toggle-theme-mobile");
    if (mobileToggle) {
      mobileToggle.addEventListener("click", () => {
        const isDark = mobileToggle.checked;
        setTheme(isDark);
        syncToggles(isDark);
      });
    }
  </script>
</body>

</html>